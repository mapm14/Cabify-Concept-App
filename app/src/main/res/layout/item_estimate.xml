<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/estimateContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackgroundBorderless"
    android:padding="8dp">

    <ImageView
        android:id="@+id/estimateIconImageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/estimateIconImageView"
        android:layout_marginTop="8dp"
        android:orientation="vertical">

        <com.manuelperera.cabifychallenge.view.widget.TypefaceTextView
            android:id="@+id/estimateVehicleShortNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            app:fontName="Open_Sans_Bold"
            android:textSize="14sp"
            tools:text="Executive" />

        <com.manuelperera.cabifychallenge.view.widget.TypefaceTextView
            android:id="@+id/estimateVehicleEtaTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray"
            android:textSize="13sp"
            app:fontName="Open_Sans_Regular"
            tools:text="10-20 min" />

        <com.manuelperera.cabifychallenge.view.widget.TypefaceTextView
            android:id="@+id/estimateVehicleFormattedPriceTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            app:fontName="Open_Sans_Semi_Bold"
            tools:text="20,00 â‚¬" />

    </LinearLayout>

</RelativeLayout>